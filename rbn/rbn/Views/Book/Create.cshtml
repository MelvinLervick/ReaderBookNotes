@model rbn.Models.BookModel

@{
  ViewBag.Title = "Add a New Book";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="Book">
  <h2>@ViewBag.Title</h2>

  <div class="Edit">
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary( true )

      <fieldset>
        <legend>@ViewBag.Title</legend>
        <ol>
          <li>
            @Html.LabelFor( model => model.Title, new {@class="Label"} )
            @Html.TextBoxFor( model => model.Title, new {@class="Title"} )
            @Html.ValidationMessageFor( model => model.Title )
          </li>
          <li>
            @Html.LabelFor( model => model.ISBN, new {@class="Label"} )
            @Html.EditorFor( model => model.ISBN, new {@class="ISBN"} )
            @Html.ValidationMessageFor( model => model.ISBN )
          </li>
        </ol>
        <div class="editor-label">
        </div>
        <div class="editor-field">
        </div>

        <div class="editor-label">
        </div>
        <div class="editor-field">
        </div>

        <div class="editor-label">
          @Html.LabelFor( model => model.AuthorId )
        </div>
        <div class="editor-field">
          @Html.EditorFor( model => model.AuthorId )
          @Html.ValidationMessageFor( model => model.AuthorId )
        </div>

        <div class="editor-label">
          @Html.LabelFor( model => model.AuthorName )
        </div>
        <div class="editor-field">
          @Html.EditorFor( model => model.AuthorName )
          @Html.ValidationMessageFor( model => model.AuthorName )
        </div>

        <div class="editor-label">
          @Html.LabelFor( model => model.AudienceId )
        </div>
        <div class="editor-field">
          @Html.EditorFor( model => model.AudienceId )
          @Html.ValidationMessageFor( model => model.AudienceId )
        </div>

        <div class="editor-label">
          @Html.LabelFor( model => model.AudienceName )
        </div>
        <div class="editor-field">
          @Html.EditorFor( model => model.AudienceName )
          @Html.ValidationMessageFor( model => model.AudienceName )
        </div>

        <div class="editor-label">
          @Html.LabelFor( model => model.Rating )
        </div>
        <div class="editor-field">
          @Html.EditorFor( model => model.Rating )
          @Html.ValidationMessageFor( model => model.Rating )
        </div>

        <div class="editor-label">
          @Html.LabelFor( model => model.Enabled )
        </div>
        <div class="editor-field">
          @Html.EditorFor( model => model.Enabled )
          @Html.ValidationMessageFor( model => model.Enabled )
        </div>

        <p>
          <input type="submit" value="Create" />
        </p>
      </fieldset>
    }
  </div>

  <div>
    @Html.ActionLink( "Back to List", "Index" )
  </div>
</div>

@section Scripts {
  @Scripts.Render( "~/bundles/jqueryval" )
}
