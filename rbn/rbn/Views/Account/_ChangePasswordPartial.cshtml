@model rbn.Models.LocalPasswordModel

@using (Html.BeginForm( "Manage", "Account" ))
{
  @Html.AntiForgeryToken()
  @Html.ValidationSummary()

  <div class="Edit">
    <fieldset>
      <h3>Change password</h3>

      <legend>Change Password Form</legend>
      <ol>
        <li>
          @Html.LabelFor( m => m.OldPassword, new
            {
              style = "display:inline-block; width: 175px;"
            } )
          @Html.PasswordFor( m => m.OldPassword )
        </li>
        <li>
          @Html.LabelFor( m => m.NewPassword, new
            {
              style = "display:inline-block; width: 175px;"
            } )
          @Html.PasswordFor( m => m.NewPassword )
        </li>
        <li>
          @Html.LabelFor( m => m.ConfirmPassword, new
            {
              style = "display:inline-block; width: 175px;"
            } )
          @Html.PasswordFor( m => m.ConfirmPassword )
        </li>
      </ol>
      <input type="submit" value="Change password" />
      @Html.ActionLink( "Cancel", "Index", "Home", null, htmlAttributes: new { @class = "BackToList", type = "button" } )
    </fieldset>
  </div>
}

@Scripts.Render( "~/bundles/jquery" )
